{
  "name": "enhanced-filesystem-mcp",
  "version": "0.10.1",
  "description": "High-performance MCP server for filesystem operations with caching, parallel execution, and advanced features",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "mcp",
    "filesystem",
    "performance",
    "caching",
    "parallel"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "archiver": "^7.0.1",
    "better-sqlite3": "^12.5.0",
    "chokidar": "^4.0.1",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "lru-cache": "^10.4.3",
    "p-queue": "^8.0.1",
    "sharp": "^0.33.5",
    "simple-git": "^3.25.0",
    "ssh2": "^1.17.0",
    "unzipper": "^0.12.3",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.19.3",
    "@types/ssh2": "^1.15.5",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  }
